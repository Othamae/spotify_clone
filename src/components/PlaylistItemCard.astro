---
import type { Playlist } from "@/lib/data"
interface Props {
  playlist: Playlist
}

const { playlist } = Astro.props

const { albumId, artists, color, cover, title, id } = playlist

const artistListString = artists.join(", ")
---

<a
  href={`/playlist/${id}`}
  class="playlist-item flex flex-col relative transition-all duration-300 p-2 overflow-hidden gap-3 pb-4 rounded-md bg-zinc-800 shadow-lg hover:shadow-xl hover:bg-zinc-500/30 w-44"
>
  <picture class="aspect-square w-full h-auto flex-none">
    <img
      src={cover}
      alt={`${title} by ${artistListString}`}
      class="object-cover w-full h-full rounded-md"
      transition:name=`playlist ${id} image`
    />
  </picture>
  <div class="flex flex-auto flex-col px-2 justify-start pb-2">
    <h4 class="text-md">{title}</h4>
    <span class="text-sm text-zinc-400">{artistListString}</span>
  </div>
</a>
