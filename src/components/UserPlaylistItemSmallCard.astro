---
import PlayIcon from "@/icons/Play.astro"
import PlayButtonPlaylist from "./PlayButtonPlaylist"
interface Props {
  id: string
  title: string
  cover: string
}

const { id, title, cover } = Astro.props
---

<article class="relative group">
  <div
    class="absolute right-0 bottom-[18px] z-10 opacity-0 transition-all duration-500
group-hover:opacity-100"
  >
    <PlayButtonPlaylist id={id} client:visible />
  </div>
  <a
    href={`/playlist/${id}`}
    class="playlist-item flex relative overflow-hidden items-center gap-3 rounded-md hover:bg-zinc-700 h-20 bg-zinc-800"
  >
    <picture class="h-20 w-20">
      <img src={cover} alt={`${title}`} class="object-cover w-full h-full" />
    </picture>
    <div class="flex flex-auto flex-row justify-between items-center truncate">
      <h4 class="text-md">{title}</h4>
      <button
        class="text-black bg-green-500 rounded-full p-2 mr-4 shadow-md shadow-current hidden"
      >
        <PlayIcon />
      </button>
    </div>
  </a>
</article>
